{
  "version": 8,
  "name": "Martin Map Style - Dark",
  "glyphs": "https://tiles.openfreemap.org/fonts/{fontstack}/{range}.pbf",
  "sources": {
    "openmaptiles": {
      "type": "vector",
      "url": "https://tiles.openfreemap.org/planet"
    },
    "martin_base": {
      "type": "vector",
      "url": "https://martin.dev-env-isolated.orb.local/land_use_polygon,division_area_polygon"
    },
    "martin_overlays": {
      "type": "vector",
      "url": "https://martin.dev-env-isolated.orb.local/schools,students,buildings_view"
    },
    "martin_iso_1km": {
      "type": "vector",
      "url": "https://martin.dev-env-isolated.orb.local/school_iso_1km_view"
    },
    "martin_iso_3km": {
      "type": "vector",
      "url": "https://martin.dev-env-isolated.orb.local/school_iso_3km_view"
    },
    "martin_iso_5km": {
      "type": "vector",
      "url": "https://martin.dev-env-isolated.orb.local/school_iso_5km_view"
    },
    "martin_routes": {
      "type": "vector",
      "url": "https://martin.dev-env-isolated.orb.local/school_routes"
    }
  },
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": {
        "background-color": "#0f172a"
      }
    },
    {
      "id": "land_use_polygon",
      "type": "fill",
      "source": "martin_base",
      "source-layer": "land_use_polygon",
      "paint": {
        "fill-color": "#1e3a2f",
        "fill-opacity": 0.7,
        "fill-outline-color": "#2d5a45"
      }
    },
    {
      "id": "division_area_polygon",
      "type": "line",
      "source": "martin_base",
      "source-layer": "division_area_polygon",
      "paint": {
        "line-color": "#8b5cf6",
        "line-width": 2,
        "line-dasharray": [2, 3]
      }
    },
    {
      "id": "transportation_casing",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "minzoom": 10,
      "filter": ["all", ["!in", "class", "rail", "ferry"], ["!=", "brunnel", "tunnel"]],
      "paint": {
        "line-color": "#1e293b",
        "line-width": [
          "interpolate", ["linear"], ["zoom"],
          10, ["match", ["get", "class"], "motorway", 2.5, "trunk", 2.5, 1.5],
          16, ["match", ["get", "class"], "motorway", 9, "trunk", 9, "primary", 9, 6]
        ]
      }
    },
    {
      "id": "transportation_inner",
      "type": "line",
      "source": "openmaptiles",
      "source-layer": "transportation",
      "minzoom": 10,
      "filter": ["all", ["!in", "class", "rail", "ferry"], ["!=", "brunnel", "tunnel"]],
      "paint": {
        "line-color": [
          "match", ["get", "class"],
          "motorway", "#7c3aed",
          "trunk", "#6366f1",
          "primary", "#4f46e5",
          "secondary", "#334155",
          "tertiary", "#334155",
          "#334155"
        ],
        "line-width": [
          "interpolate", ["linear"], ["zoom"],
          10, ["match", ["get", "class"], "motorway", 1, "trunk", 1, 0.5],
          16, ["match", ["get", "class"], "motorway", 6, "trunk", 6, "primary", 6, 3.5]
        ]
      }
    },
    {
      "id": "buildings",
      "type": "fill-extrusion",
      "source": "martin_overlays",
      "source-layer": "buildings_view",
      "minzoom": 16,
      "paint": {
        "fill-extrusion-color": "#374151",
        "fill-extrusion-height": ["get", "render_height"],
        "fill-extrusion-base": ["get", "render_min_height"],
        "fill-extrusion-opacity": 0.7
      }
    },
    {
      "id": "school_ors_isochrones_5km",
      "type": "fill",
      "source": "martin_iso_5km",
      "source-layer": "school_iso_5km_view",
      "minzoom": 5,
      "paint": {
        "fill-color": "#f43f5e",
        "fill-opacity": 0.15,
        "fill-outline-color": "rgba(244, 63, 94, 0.3)"
      }
    },
    {
      "id": "school_ors_isochrones_3km",
      "type": "fill",
      "source": "martin_iso_3km",
      "source-layer": "school_iso_3km_view",
      "minzoom": 5,
      "paint": {
        "fill-color": "#f59e0b",
        "fill-opacity": 0.15,
        "fill-outline-color": "rgba(245, 158, 11, 0.3)"
      }
    },
    {
      "id": "school_ors_isochrones_1km",
      "type": "fill",
      "source": "martin_iso_1km",
      "source-layer": "school_iso_1km_view",
      "minzoom": 5,
      "paint": {
        "fill-color": "#10b981",
        "fill-opacity": 0.15,
        "fill-outline-color": "rgba(16, 185, 129, 0.3)"
      }
    },
    {
      "id": "school_routes",
      "type": "line",
      "source": "martin_routes",
      "source-layer": "school_routes",
      "minzoom": 10,
      "layout": {
        "line-cap": "round",
        "line-join": "round",
        "visibility": "none"
      },
      "paint": {
        "line-color": "#818cf8",
        "line-width": [
          "interpolate", ["linear"], ["zoom"],
          10, 0.5,
          13, 1,
          15, 2,
          18, 3
        ],
        "line-opacity": [
          "interpolate", ["linear"], ["zoom"],
          10, 0.4,
          13, 0.6,
          16, 0.8
        ]
      }
    },
    {
      "id": "students",
      "type": "circle",
      "source": "martin_overlays",
      "source-layer": "students",
      "minzoom": 12,
      "paint": {
        "circle-radius": [
          "interpolate", ["linear"], ["zoom"],
          12, 2,
          15, 4,
          18, 6
        ],
        "circle-color": [
          "match", ["get", "gender"],
          "Female", "#f472b6",
          "Male", "#60a5fa",
          "#9ca3af"
        ],
        "circle-stroke-width": 1,
        "circle-stroke-color": "#1e293b",
        "circle-opacity": 0.9
      }
    },
    {
      "id": "schools",
      "type": "circle",
      "source": "martin_overlays",
      "source-layer": "schools",
      "minzoom": 12,
      "paint": {
        "circle-radius": [
          "interpolate",
          ["linear"],
          ["zoom"],
          12, 3,
          16, 8
        ],
        "circle-color": "#f87171",
        "circle-stroke-width": 1.5,
        "circle-stroke-color": "#1e293b"
      }
    },
    {
      "id": "land_use_polygon_label",
      "type": "symbol",
      "source": "martin_base",
      "source-layer": "land_use_polygon",
      "layout": {
        "text-field": "{names_pri}",
        "text-font": ["Noto Sans Regular"],
        "text-size": 14
      },
      "paint": {
        "text-color": "#86efac",
        "text-halo-color": "#0f172a",
        "text-halo-width": 2
      }
    },
    {
      "id": "division_area_polygon_label",
      "type": "symbol",
      "source": "martin_base",
      "source-layer": "division_area_polygon",
      "layout": {
        "text-field": "{names_pri}",
        "text-font": ["Noto Sans Regular"],
        "text-size": 15,
        "text-transform": "uppercase"
      },
      "paint": {
        "text-color": "#c4b5fd",
        "text-halo-color": "#0f172a",
        "text-halo-width": 2
      }
    },
    {
      "id": "schools_label",
      "type": "symbol",
      "source": "martin_overlays",
      "source-layer": "schools",
      "minzoom": 13,
      "layout": {
        "text-field": "{school_nam}",
        "text-font": ["Noto Sans Regular"],
        "text-size": 13,
        "text-offset": [0, 1.4],
        "text-anchor": "top"
      },
      "paint": {
        "text-color": "#fca5a5",
        "text-halo-color": "#0f172a",
        "text-halo-width": 2
      }
    }
  ]
}
