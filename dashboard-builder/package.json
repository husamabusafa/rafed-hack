{
  "name": "dashboard-builder",
  "version": "1.0.0",
  "description": "Dashboard Builder with NestJS backend and React frontend",
  "private": true,
  "scripts": {
    "install:all": "pnpm install --recursive",
    "install:client": "cd client && pnpm install",
    "install:server": "cd server && pnpm install",
    "dev": "concurrently -n \"SERVER,CLIENT\" -c \"blue,green\" \"pnpm run dev:server\" \"pnpm run dev:client\"",
    "dev:server": "cd server && pnpm run dev",
    "dev:client": "cd client && pnpm run dev",
    "build:client": "cd client && pnpm run build",
    "build:server": "cd server && pnpm run build"
  },
  "devDependencies": {
    "concurrently": "^9.0.1"
  },
  "workspaces": [
    "client",
    "server"
  ]
}
